---
import { withBase as to } from '../lib/paths';
interface Props {
  title?: string;
  description?: string;
}
const { title = "Sara — Ingeniera Física", description = "Blog y portafolio personal de Sara." } = Astro.props;

/* importa estilos globales aquí para que apliquen en todo */
import "../styles/global.css";
const SITE = 'https://mrqm30.github.io';
const BASE = import.meta.env.BASE_URL;                   // p.ej. "/milton-blog/"
const BASE_NO_SLASH = BASE.endsWith('/') ? BASE.slice(0, -1) : BASE; // "/milton-blog"
const CANONICAL_URL = new globalThis.URL(BASE_NO_SLASH, SITE).toString();

---
<html lang="es" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Fuente -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet" />

    <link rel="icon" href={to("favicon.svg")} />
    <meta name="color-scheme" content="dark" />
  </head>
  <body class="min-h-screen">
    <slot />
  </body>
</html>

