---
interface Props {
  title: string;
  subtitle?: string;
  right?: string;       // fecha o ubicaci√≥n a la derecha
  description?: string;
}
const { title, subtitle = "", right = "", description = "" } = Astro.props;
---
<li class="relative pl-6">
  <span class="absolute left-0 top-1.5 h-2.5 w-2.5 rounded-full bg-primary"></span>
  <div class="flex items-baseline justify-between gap-4">
    <h3 class="font-semibold">{title}</h3>
    {right && <span class="text-xs text-muted">{right}</span>}
  </div>
  {subtitle && <p class="text-sm text-muted -mt-0.5">{subtitle}</p>}
  {description && <p class="text-sm mt-2">{description}</p>}
</li>
