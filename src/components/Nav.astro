---
import { withBase as to, samePath } from '../lib/paths';
const links = [
  { href: to("Resumen"), label: "Resumen" },
  { href: to("publicaciones"), label: "Publicaciones" },
  { href: to("habilidades"), label: "Habilidades" },
  { href: to("intereses"), label: "Intereses" },
  ];

const current = Astro.url.pathname;
const isActive = (p:string) => samePath(current, to(p));
---
<nav class="container-balanced py-6 flex items-center justify-between">
  <a href={to("")} class="font-extrabold tracking-tight text-lg">
    <span class="text-primary">Sara</span> <span class="text-fg/80">· Física</span>
  </a>
  <ul class="hidden md:flex items-center gap-5">
    {links.map(l => <li><a class="nav-link" href={l.href}>{l.label}</a></li>)}


  </ul>
  <a href={to("resumen")} class="btn btn-primary md:hidden">Menú</a>
</nav>
