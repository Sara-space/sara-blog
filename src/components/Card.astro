---
interface Props {
  title: string; href: string; description?: string;
}
const { title, href, description = "" } = Astro.props;
---
<a href={href} class="card block hover:ring-2 hover:ring-primary/50 transition-shadow">
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-sm text-muted">{description}</p>
</a>
